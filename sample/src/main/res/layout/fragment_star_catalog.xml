<?xml version="1.0" encoding="utf-8"?>
<!-- 女明星页面 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lixue.aibei.sample.widget.MyPullRefreshLayout
        android:id="@+id/refreshLayout_starCatalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_starCatalog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation"
            android:divider="@null"
            android:listSelector="@null"/>
    </com.lixue.aibei.sample.widget.MyPullRefreshLayout>
    <com.lixue.aibei.sample.widget.HintView
        android:id="@+id/hint_starCatalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>