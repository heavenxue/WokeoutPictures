<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.lixue.aibei.sample.widget.MyImageView
            android:id="@+id/image_hotStarThreeLeftItem_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/text_hotStarThreeLeftItem_one"
            style="@style/TextAppearance_ImageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.lixue.aibei.sample.widget.MyImageView
                android:id="@+id/image_hotStarThreeLeftItem_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/text_hotStarThreeLeftItem_two"
                style="@style/TextAppearance_ImageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.lixue.aibei.sample.widget.MyImageView
                android:id="@+id/image_hotStarThreeLeftItem_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/text_hotStarThreeLeftItem_three"
                style="@style/TextAppearance_ImageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>