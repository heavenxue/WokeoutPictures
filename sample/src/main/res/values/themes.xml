<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- 配置不同版本上的差异 -->
    <style name="CompatTheme" parent="BaseTheme">

    </style>

    <!-- 真正使用的主题，在BaseThemeCompatTheme的基础上定义所有版本均支持的样式 -->
    <style name="AppTheme" parent="CompatTheme">
        <item name="android:windowBackground">@drawable/shape_window_background</item>
        <item name="android:textViewStyle">@style/MyTextView</item>


    </style>

    <!-- TextView的样式 -->
    <style name="MyTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/default_text_color_normal</item>
    </style>

</resources>